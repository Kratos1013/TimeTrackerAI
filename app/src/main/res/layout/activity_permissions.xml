<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    android:id="@+id/horizontalScroll"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.krintos.timetrackerai.Permissions.Permissions">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

    <FrameLayout
        android:layout_weight="1.0"
        android:id="@+id/permissiontoreadstorage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@drawable/storagepermission"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:text="@string/ex_storage_permission"
            android:layout_gravity="center"
            android:layout_margin="@dimen/login_et_margin"
            android:layout_width="250dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_height="wrap_content" />
        <Button
            android:padding="5dp"
            android:background="@drawable/round_login_bt"
            android:layout_gravity="bottom|center"
            android:id="@+id/storage"
            android:layout_marginBottom="@dimen/permissionbuttonmarginbottom"
            android:layout_width="wrap_content"
            android:text="@string/givepermission"
            android:layout_height="wrap_content" />
    </FrameLayout>
        <FrameLayout
            android:layout_weight="1.0"

            android:id="@+id/permissionforlocation"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:src="@drawable/geolocationpermission"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="@string/ex_location_permission"
                android:layout_gravity="center"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />
            <Button
                android:padding="5dp"
                android:background="@drawable/round_login_bt"
                android:id="@+id/location"
                android:layout_gravity="bottom|center"
                android:text="@string/givepermission"
                android:layout_marginBottom="@dimen/permissionbuttonmarginbottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    <FrameLayout
        android:layout_weight="1.0"

        android:id="@+id/permission2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:background="@drawable/round_login_bt"
            android:padding="5dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/permissionbuttonmarginbottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <FrameLayout
        android:layout_weight="1.0"

        android:id="@+id/permission3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:background="@drawable/round_login_bt"
            android:padding="5dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/permissionbuttonmarginbottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <FrameLayout
        android:layout_weight="1.0"

        android:id="@+id/permission4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:padding="5dp"
            android:background="@drawable/round_login_bt"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/permissionbuttonmarginbottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>
        </LinearLayout>
</HorizontalScrollView>
